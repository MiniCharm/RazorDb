@page
@model RazorDb.Pages.Test.AddRoomsModel
@{
    ViewData["Title"] = "AddRoom";
}

<h1>Opret et værelse:</h1>
<br />
<form method="post" enctype="multipart/form-data">
    <br />
    <div class="form-grpup">
        <label asp-for="@Model.room.RoomNr" class"controle-label"></label>
        <input asp-for="@Model.room.RoomNr" class="form-control" />
        <span asp-validation-for="room.RoomNr" class="text-danger"></span>
    </div>
    <div class="form-grpup">
        <label asp-for="@Model.room.HotelNr" class"controle-label"></label>
        <input asp-for="@Model.room.HotelNr" class="form-control" />
        <span asp-validation-for="room.HotelNr" class="text-danger"></span>
    </div>
    <br />
    <div class="form-grpup">
        <label>Room type:</label><br />
        <select id="ChosenType"
                name="ChosenType"
                asp-for="@Model.ChosenType"
                asp-items="@Model.SelectListRoomType">
        </select>
@*         <label asp-for="@Model.room.Types" class"controle-label"></label>
        <input asp-for="@Model.room.Types" class="form-control" /> *@
        <span asp-validation-for="room.Types" class="text-danger"></span>
    </div>
    <div class="form-grpup">
        <label asp-for="@Model.room.Pris" class"controle-label"></label>
        <input asp-for="@Model.room.Pris" class="form-control" />
        <span asp-validation-for="room.Pris" class="text-danger"></span>
    </div>
    <br>
    <br />
    <div class="formgroup">
        <input type="submit" value="Create Room" class="btn btn-primary" />
    </div>
</form>

@section scripts
{
    <partial RoomNr= "_validationScriptPartial"></partial>
}

